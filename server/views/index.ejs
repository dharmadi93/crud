<!DOCTYPE html>
<html>

  <% include head.ejs %>

  <body>

  <div class="container">
    <div class="row">

      <!-- FORM START-->
      <div class="col-sm-6">
        <div class="panel panel-default form">
          <div class="panel-heading text-center">
            Add Memo
          </div>
          <div class="panel-body">
            <form class="form-horizontal">
              <div class="form-group">
                <div class="col-sm-12">
                  <input type="text" class="form-control" name="title" placeholder="Memo Title">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <input type="text" class="form-control" name="description" placeholder="Memo Description">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12 text-center">
                  <button type="submit" name="createMemo" class="btn btn-default">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- FORM END -->

      <!-- MEMO START-->
      <div class="col-sm-6">
        <div class="panel panel-default memo">
          <div class="panel-heading text-center">
            Memo List
          </div>
          <div class="panel-body">

            <div class="memoList">
              <table class="table">
                <% for (var i = 0; i < memo.length; i++) { %>
                <tr id="row<%= memo[i].id%>">
                  <td>
                    <h3>
                      <%= memo[i].title%>
                      <span class="pull-right">
                        <button id="<%= memo[i].id%>" name="editMemo" class="btn btn-warning">Edit</button>
                        <button id="<%= memo[i].id%>" name="deleteMemo" class="btn btn-danger">Delete</button>
                      </span>
                    </h3>
                    <p><%= memo[i].description%></p>
                  </td>
                </tr>
                <% } %>
              </table>
            </div>

          </div>
        </div>
      </div>
      <!-- MEMO END -->

    </div>
  </div>

    <% include script.ejs %>
  </body>
</html>
